@model CodeYad_Blog.CoreLayer.Utilities.BasePagination
@if (Model.PageCount > 1)
{
    <div class="box-footer">
        <div style="padding:10px">
            <ul class="pagination" style="display: inline-block">
                @if (Model.CurrentPage > 1)
                {
                    <li class="paginate_button previous">
                        <a onclick="changePage(@(Model.CurrentPage-1))" href="#">قبلی</a>
                    </li>
                }
                else
                {
                        
                    <li class="paginate_button previous disabled">
                        <a href="#">قبلی</a>
                    </li>
                }

                @for (var i = 1; i <= Model.PageCount; i++)
                {
                    <li class="paginate_button @(i == Model.CurrentPage ? "active" : null)">
                        <a  onclick="changePage(@i)"href="javascript:void(0)">@i</a>
                    </li>
                }
                @if (Model.PageCount > Model.CurrentPage)
                {
                    <li class="paginate_button next">
                        <a onclick="changePage(@(Model.CurrentPage+1))" href="#">بعدی</a>
                    </li>
                }
                else
                {
                    <li class="paginate_button next disabled">
                        <a  href="javascript:void(0)">بعدی</a>
                    </li>
                }
            </ul>
        </div>
    </div>
}